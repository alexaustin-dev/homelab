---
# Example inventory file - Copy to hosts.yml and customize with your values
all:
  children:
    proxmox_hosts:
      hosts:
        proxmox-node-1:
          ansible_host: 192.168.1.10
        proxmox-node-2:
          ansible_host: 192.168.1.11
        proxmox-node-3:
          ansible_host: 192.168.1.12
      vars:
        ansible_ssh_private_key_file: ~/.ssh/homelab_key
        ansible_user: root
    vms:
      hosts:
        vm-docker-001:
          ansible_host: 192.168.2.10
        vm-storage-001:
          ansible_host: 192.168.2.11
        vm-monitoring-001:
          ansible_host: 192.168.2.12
      vars:
        ansible_user: your_vm_user
  vars:
    ansible_python_interpreter: /usr/bin/python3
